    <TextView
        android:id="@+id/reminderDateTextView"
        android:text=" Reminder date"
        android:textColor="@color/black"
        android:gravity="bottom"
        android:textSize="20dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight=".5"
        android:layout_columnWeight="1"
        android:layout_columnSpan="2" />

    <Button
        android:id="@+id/pickReminderDateButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Pick Reminder Date"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1" />

    <TextView
        android:id="@+id/reminderDateConfirmTextView"
        android:text=""
        android:textColor="@color/blue"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1" />

    <TextView
        android:id="@+id/reminderTextView"
        android:text="Pick a time you want to be reminded"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:gravity="bottom"
        android:textSize="20dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight=".5"
        android:layout_columnWeight="1"
        android:layout_columnSpan="2" />

    <TimePicker
        android:id="@+id/reminderTimePicker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1.5"
        android:layout_columnWeight="1"
        android:layout_columnSpan="2"
        android:timePickerMode="spinner" />

    <Button
        android:id="@+id/reminderSaveButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Save!"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="2" />


</GridLayout>