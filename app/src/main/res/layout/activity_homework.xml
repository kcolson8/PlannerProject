<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:padding="10dp"
    tools:context=".HomeworkActivity">

    <EditText
        android:id="@+id/titleEditText"
        android:hint="Assignment title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1" />

    <Spinner
        android:id="@+id/subjectSpinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1" />

    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Homework assignment description"
        android:gravity="top"
        android:layout_rowWeight="2"
        android:layout_columnWeight="1"
        android:layout_columnSpan="2" />

    <TextView
        android:id="@+id/dueDateTextView"
        android:text=" Homework due date"
        android:textColor="@color/black"
        android:gravity="bottom"
        android:textSize="20dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight=".5"
        android:layout_columnWeight="1"
        android:layout_columnSpan="2" />

    <Button
        android:id="@+id/pickDueDateButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Pick Due Date"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1" />

    <TextView
        android:id="@+id/dueDateConfirmTextView"
        android:text=""
        android:textColor="@color/blue"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1" />

    <TextView
        android:id="@+id/reminderDateTextView"
        android:text=" Reminder date"
        android:textColor="@color/black"
        android:gravity="bottom"
        android:textSize="20dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight=".5"
        android:layout_columnWeight="1"
        android:layout_columnSpan="2" />

    <Button
        android:id="@+id/pickReminderDateButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Pick Reminder Date"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1" />

    <TextView
        android:id="@+id/reminderDateConfirmTextView"
        android:text=""
        android:textColor="@color/blue"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1" />

    <TextView
        android:id="@+id/reminderTextView"
        android:text="Pick a time you want to be reminded"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:gravity="bottom"
        android:textSize="20dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight=".5"
        android:layout_columnWeight="1"
        android:layout_columnSpan="2" />

    <TimePicker
        android:id="@+id/reminderTimePicker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1.5"
        android:layout_columnWeight="1"
        android:layout_columnSpan="2"
        android:timePickerMode="spinner" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Save!"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="2" />


</GridLayout>